<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9781E6"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C6A2FA"
        android:gravity="bottom"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lastOperation"
                style="@style/LastOperationText"
                android:gravity="end"
                android:padding="12dp"
                android:textColor="#4B0082" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/result"
                style="@style/OperationText"
                android:gravity="end"
                android:padding="12dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:stretchColumns="0,1,2,3">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn1"
                    style="@style/MyButton"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:background="@drawable/selector1"
                    android:minWidth="48dip"
                    android:text="1"
                    android:textColor="#4B0082"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btn2"
                    style="@style/MyButton"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:background="@drawable/selector2"
                    android:text="2"
                    android:textColor="#4B0082"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btn3"
                    style="@style/MyButton"
                    android:background="@drawable/selector3"
                    android:text="3"
                    android:textColor="#4B0082"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btnDiv"
                    style="@style/MyButton"
                    android:background="@drawable/selector4"
                    android:text="รท"
                    android:textColor="#4B0082"
                    android:textSize="30sp" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="70dp">

                <Button
                    android:id="@+id/btn4"
                    style="@style/MyButton"
                    android:background="@drawable/selector5"
                    android:text="4"
                    android:textColor="#4B0082"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btn5"
                    style="@style/MyButton"
                    android:background="@drawable/selector6"
                    android:text="5"
                    android:textColor="#4B0082"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btn6"
                    style="@style/MyButton"
                    android:background="@drawable/selector7"
                    android:text="6"
                    android:textColor="#4B0082"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btnMult"
                    style="@style/MyButton"
                    android:background="@drawable/selector8"
                    android:text="ร"
                    android:textColor="#4B0082"
                    android:textSize="30sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <Button
                    android:id="@+id/btn7"
                    style="@style/MyButton"
                    android:background="@drawable/selector9"
                    android:text="7"
                    android:textColor="#4B0082"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btn8"
                    style="@style/MyButton"
                    android:background="@drawable/selector10"
                    android:text="8"
                    android:textColor="#4B0082"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btn9"
                    style="@style/MyButton"
                    android:background="@drawable/selector11"
                    android:text="9"
                    android:textColor="#4B0082"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btnMinus"
                    style="@style/MyButton"
                    android:background="@drawable/selector12"
                    android:text="-"
                    android:textColor="#4B0082"
                    android:textSize="30sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <Button
                    android:id="@+id/btnClear"
                    style="@style/MyButton"
                    android:background="@drawable/selector13"
                    android:text="C"
                    android:textAllCaps="false"
                    android:textColor="#4B0082"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btn0"
                    style="@style/MyButton"
                    android:background="@drawable/selector"
                    android:text="0"
                    android:textColor="#4B0082"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btnEq"
                    style="@style/MyButton"
                    android:background="@drawable/selector14"
                    android:text="="
                    android:textColor="#4B0082"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btnPlus"
                    style="@style/MyButton"
                    android:background="@drawable/selector15"
                    android:text="+"
                    android:textColor="#4B0082"
                    android:textSize="30sp" />

            </TableRow>

        </TableLayout>
    </LinearLayout>


</RelativeLayout>