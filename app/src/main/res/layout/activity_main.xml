<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lastOperation"
                android:padding="12dp"
                android:gravity="end"
                style="@style/LastOperationText" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/result"
                android:padding="12dp"
                android:gravity="end"
                style="@style/OperationText" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:stretchColumns="0,1,2,3">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn1"
                    style="@style/MyButton"
                    android:text="1" />

                <Button
                    android:id="@+id/btn2"
                    style="@style/MyButton"
                    android:text="2" />

                <Button
                    android:id="@+id/btn3"
                    style="@style/MyButton"
                    android:text="3" />

                <Button
                    android:id="@+id/btnDiv"
                    style="@style/MyButton"
                    android:text="รท" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="70dp">

                <Button
                    android:id="@+id/btn4"
                    style="@style/MyButton"
                    android:text="4" />

                <Button
                    android:id="@+id/btn5"
                    style="@style/MyButton"
                    android:text="5" />

                <Button
                    android:id="@+id/btn6"
                    style="@style/MyButton"
                    android:text="6" />

                <Button
                    android:id="@+id/btnMult"
                    style="@style/MyButton"
                    android:text="ร" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <Button
                    android:id="@+id/btn7"
                    style="@style/MyButton"
                    android:text="7" />

                <Button
                    android:id="@+id/btn8"
                    style="@style/MyButton"
                    android:text="8" />

                <Button
                    android:id="@+id/btn9"
                    style="@style/MyButton"
                    android:text="9" />

                <Button
                    android:id="@+id/btnMinus"
                    style="@style/MyButton"
                    android:text="-" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <Button
                    android:id="@+id/btnClear"
                    style="@style/MyButton"
                    android:text="C" />

                <Button
                    android:id="@+id/btn0"
                    style="@style/MyButton"
                    android:text="0" />

                <Button
                    android:id="@+id/btnEq"
                    style="@style/MyButton"
                    android:text="=" />

                <Button
                    android:id="@+id/btnPlus"
                    style="@style/MyButton"
                    android:text="+" />

            </TableRow>

        </TableLayout>
    </LinearLayout>

</RelativeLayout>