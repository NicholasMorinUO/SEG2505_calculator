<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="false">
		<shape>
    			<corners android:radius="300dp" />
   			<stroke
        			android:width="3dp"
        			android:color="#4B0082" />
    			<padding
       				 android:bottom="10dp"
       				 android:left="10dp"
       				 android:right="10dp"
        			 android:top="10dp" />

    			<solid android:color="#E6E6FA" />

		</shape>
	</item>
	<item android:state_pressed="true">
		<shape>
    			<corners android:radius="300dp" />
   			<stroke
        			android:width="3dp"
        			android:color="#4B0082" />
    			<padding
       				 android:bottom="10dp"
       				 android:left="10dp"
       				 android:right="10dp"
        			 android:top="10dp" />

    			<solid android:color="#b5c2a5" />

		</shape>
	</item>
</selector>
